/* pages/order/order.wxss */
page{
  font-size: 30rpx;
  background: #ECECEC;
}
/* 头部 */
 .header{
  display: flex;
  background-color: #FFC640;
  height: 217rpx;
}
.header .userinfo-img2{
  vertical-align:middle;
  width:140rpx;
  height:140rpx;
  margin:30rpx;
  border-radius: 50%;
}
.header .userinfo-nickname{
  margin-top:50rpx;
}
.header .userinfo-nickname .userinfo-text{
  margin:10rpx;
  display: block;
}
.header .userinfo-img1{
  width:140rpx;
height:140rpx;
border-radius:50%;
background:white;
margin:30rpx;
vertical-align:middle;
}
.header span{
  vertical-align:middle;
margin-top:60rpx;
}
.header span button{
  color: white;
  font-size:28rpx;
  background-color:#FFC640;
}

/* content */
.content{
  margin-top: 20rpx;
}
.content .content_li{
  background-color: white;
  margin-bottom:3rpx;
  height:62rpx;
  padding-top:22rpx;
  font-size:29rpx;
}
.content .content_li image{
  height:35rpx;
  width:35rpx;
  vertical-align:middle;
  margin:0 10rpx;
}
.content_bt{
  background-color: white;
  margin-bottom:3rpx;
  height:62rpx;
  padding-top:22rpx;
  font-size:29rpx;
  padding:0;
border-radius:0px;
text-align:left;
}
.content_bt::after{
   border:none;
}
.button-hover {
color:black;
background-color:white;
}
.image1{
  height:35rpx;
  width:35rpx;
  vertical-align:middle;
  margin:0 10rpx;
}
.content .content_li .text1{
  color:red;
  margin:0 10rpx;
}
.content .content_li .text2{
  color:#333333;
  font-size:21rpx;
  vertical-align:top;

}
.signout{
  background-color: white;
  height: 62rpx;
  margin-top: 20rpx;
  padding-top:22rpx;
  text-align:center;
}