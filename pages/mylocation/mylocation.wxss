.locationlist{
display: inline-block;
border-bottom: 1rpx solid #dddee1;

width: 100%;
padding:20rpx;

}
.view1{
display: inline-block;
vertical-align:middle;
width:87%;
font-size:28rpx;
}
.view1 span{
  margin-right: 20rpx;
}
.view2{
display: inline-block;
vertical-align:middle;

}
.view2 image{
  height: 40rpx;
  width: 40rpx;
}
.location-foot{
  background-color: #f8f9fc;
  line-height:3;
  border-top: 1rpx solid #dddee1;
  position: fixed;
  height: 9%;
  width: 100%;
  bottom: 0px;
  z-index: 99999999;
  text-align: center;
  vertical-align: middle;
}
.location-foot text{
  padding:0 8rpx;
font-size:35rpx;
  margin-right: 10rpx;
height: 45rpx;
  width: 45rpx;
  text-align: center;
  border: 1rpx solid #ffc640;
  
  border-radius: 50%;
  color: #ffc640;
  line-height: 40rpx;
}
